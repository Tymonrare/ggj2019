# Called when the node enters the scene tree for the first time.
func _ready():
	_on_Button_pressed();
	pass # Replace with function body.

# Called every frame. 'delta' is the elapsed time since the previous frame.
#func _process(delta):
#	pass

func update():
	hand_update();
	inv_update();
	
	var l = get_node('Panel/turns');
	var m = get_node(\"../math\");
	l.text = \"turn: \" + String(m.turn);
	l.text += \"\\nround: \" + String(m.roundCounter);
	if m.mapRegion:
		l.text += \"\\ndeck: \" + String(m.regionDecks[m.mapRegion].size());

func inv_update():
	var l = get_node('Panel/inventory2')
	l.text = \"\";
	var m = get_node(\"../math\");
	for key in m.inventory:
		l.text += \"\\n >> \" + key + \": x\" + String(m.inventory[key]);
		
func hand_update():
	var l = get_node('Panel/Label2')
	l.text = \"\";
	var m = get_node(\"../math\");
	for i in m.hand:
		l.text += \"\\nRegion: \" + i.region;
		for key in i.resources:
			l.text += \"\\n >> \" + key + \": \" + String(i.resources[key].chance*100) + \"% x\" + String(i.resources[key].count);	

func _on_Button_pressed():
	var m = get_node(\"../math\");
	m.next_turn();
	print(m.hand);
	
	update();

	pass # Replace with function body.
	
func select_card(index):
	var m = get_node(\"../math\");
	if m.hand.size() < index:
		return;
		
	m.play_card(index)
	
	update();
"

